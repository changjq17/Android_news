<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.java.changjiaqing">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.java.changjiaqing.ShareApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.java.changjiaqing.SearchHistoryActivity"
            android:label="搜索历史"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.java.changjiaqing.skinlayout"
            android:label="主题风格"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.java.changjiaqing.category.CategoryActivity"
            android:label="分类管理"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.java.changjiaqing.NewsReadActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.java.changjiaqing.NewsDetailActivity"
            android:label="新闻详情"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.java.changjiaqing.MainActivity"
            android:label="常佳庆计泽坤-News"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>